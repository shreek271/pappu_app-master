<div class="container-fluid confirmation">

    <div class="text-center">
      <h1><%= product.name %></h1>  
    </div>    

    <div>
      <%= form_for order_item, remote: true do |f| %>
        <h5 class="text-center">Unit Price: <i class="fa fa-inr"></i> <%= order_item.unit_price %></h5>
        <br><br><br>
        <div class="row">
          <div class="col-sm-offset-1 col-sm-2">
            <%= f.hidden_field :product_id, value: product.id %> 
            <span>Item cost: <i class="fa fa-inr"></i> <%= order_item.total_price %><span>       
          </div>
          <div class="col-sm-2">
            <span> Total number of Item </span> 
          </div>
          <div class="col-sm-2">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
          </div>
          <div class="col-sm-2">
            <%= f.submit "update number", class: "btn btn-primary" %>
          </div>
          <div class="col-sm-2">
            <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
          </div>
        </div>
        <br><br>
      <% end %>
    </div>
</div>